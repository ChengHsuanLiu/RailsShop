<%= form_for [:admins, @order] do |f| %>
	<p>商店名稱： <%= @order.shop.name %></p>
	<p>訂單 ID: <%= @order.id %></p>
	<p>總金額: <%= @order.total %></p>

	<p>明細</p>
	<table>
		<thead>
			<tr>
				<th>名稱</th>
				<th>規格</th>
				<th>金額</th>
				<th>數量</th>
				<th>小計</th>
			</tr>
		</thead>
		<tbody>
			<% @order.line_items.each do |item| %>
				<tr>
					<td><%= item.product_name %></td>
					<td><%= item.variant_name %></td>
					<td><%= item.price %></td>
					<td><%= item.quantity %><%= item.unit_name %></td>
					<td><%= item.price * item.quantity %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<div class="field">
		<%= f.label :state %>
		<%= f.text_field :state %>
	</div>
	<div class="field">
		<%= f.label :bill_name %>
		<%= f.text_field :bill_name %>
	</div>
	<div class="field">
		<%= f.label :bill_address %>
		<%= f.text_field :bill_address %>
	</div>
	<div class="field">
		<%= f.label :bill_phone %>
		<%= f.text_field :bill_phone %>
	</div>
	<div class="field">
		<%= f.label :shipping_name %>
		<%= f.text_field :shipping_name %>
	</div>
	<div class="field">
		<%= f.label :shipping_address %>
		<%= f.text_field :shipping_address %>
	</div>
	<div class="field">
		<%= f.label :shipping_phone %>
		<%= f.text_field :shipping_phone %>
	</div>
	<div class="field">
		<%= f.label :company_name %>
		<%= f.text_field :company_name %>
	</div>
	<div class="field">
		<%= f.label :company_registration_number %>
		<%= f.text_field :company_registration_number %>
	</div>
<% end %>
