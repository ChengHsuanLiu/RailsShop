<table>
	<thead>
		<tr>
			<th>商品名稱</th>
			<th>規格</th>
			<th>單價</th>
			<th>數量</th>
			<th>小計</th>
		</tr>
	</thead>
	<tbody>
		<% @cart_items.each do |item| %>
			<tr>
				<td><%= item.varient.product.name %></td>
				<td><%= item.varient.name %></td>
				<td><%= item.price %></td>
				<td><%= item.quantity %></td>
				<td><%= item.price * item.quantity %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<%= form_for @bill do |f| %>
	<div class="field">
		<%= f.label :payment_type %>
		<%= f.text_field :payment_type %>
	</div>
	<div class="field">
		<%= f.label :bill_name %>
		<%= f.text_field :bill_name %>
	</div>
	<div class="field">
		<%= f.label :bill_phone %>
		<%= f.text_field :bill_phone %>
	</div>
	<div class="field">
		<%= f.label :bill_address %>
		<%= f.text_field :bill_address %>
	</div>
	<div class="field">
		<%= f.submit %>
	</div>
<% end %>
